<!DOCTYPE html>
<html>
<title>W3.CSS</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<body>

<div class="w3-container">
  <h2>Student Data</h2>
  <h3>
    <a href="/student/add">Add Student</a>
  </h3>
  <table class="w3-table">
    <tr>
      <th>Id</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Subject</th>
      <th>Actions</th>
      <th>Options</th>
    </tr>
    <% dataStudent.forEach(dataStudent => { %>
      <tr>
        <td><%= dataStudent.id %></td>
        <td><%= dataStudent.first_name %></td>
        <td><%= dataStudent.last_name %></td>
        <td><%= dataStudent.email %></td>
        <td>
          <% if (dataStudent.Subjects.length === 0) { %>
            Unassigned
          <% } else { %>
            <ol>
              <% for (let i = 0; i < dataStudent.Subjects.length; i++) { %>
                <li>
                  <%= dataStudent.Subjects[i].subject_name %>
                </li>
              <% } %>
            </ol>
          <% } %>
        </td>
        <td>
          <a href="/student/<%= dataStudent.id %>/add-subject">Add Subject</a>
        </td>
        <td>
          <a href="#">Edit</a> ||
          <a href="#">Delete</a>
        </td>
      </tr>
    <% }) %>
  </table>

  <a href="/" class="w3-button w3-black">Back</a>
</div>

</body>
</html>
