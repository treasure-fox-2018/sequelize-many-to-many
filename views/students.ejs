<!DOCTYPE html>
<html>
<head>
<style>
table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
}

td, th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
}

h2, p {
    text-align: center
}
</style>
</head>
<body>

<h2>Students Data</h2>
<p><a href="/students/add">add student</a></p>
<table>
    <thead>
    <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Actions</th>
        <th>Options</th>
    </tr>
    </thead>
    <tbody>
        <% students.forEach(student => { %>
            <tr>
                <td> <%= student.id %> </td>
                <td> <%= student.firstName %> </td>
                <td> <%= student.lastName %> </td>
                <td> <%= student.email %> </td>
                <td> <a href="/students/<%=student.id%>/add-subject">Add Subject</a></td>
                <td> <a href="/students/<%=student.id%>/edit-student" >Edit</a> | <a href="/students/<%=student.id%>/delete-subject">Delete</a></td>
            </tr>
        <% }) %>
    </tbody>
</table>

</body>
</html>

