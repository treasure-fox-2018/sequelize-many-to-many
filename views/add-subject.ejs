<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>add subject</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="main.css" />
    <script src="main.js"></script>
    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }
        th, td {
            padding: 5px;
            text-align: left;
        }
    </style>
</head>
<body>
    <table style="width:100%">

        <tr>
            <th>First Name:</th>
            <td><%= dataStudent.firstName %></td>
        </tr>
        <tr>
            <th>Last Name:</th>
            <td><%= dataStudent.lastName %></td>
        </tr>
        <tr>
            <th>Email:</th>
            <td><%= dataStudent.email %></td>
        </tr>
    </table>
    <form action="/students/<%= dataStudent.id %>/add-subject" method="post">
        <select name="SubjectId">
            <% dataSubjects.forEach(function(dataSubject) { %>
                <option value="<%= dataSubject.id %>"><%= dataSubject.subjectName %></option>
           <% }) %>
        </select>
        <br><br>
        <input type="submit" value="Submit">
    </form> 
</body>
</html>