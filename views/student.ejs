<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Student List</title>

</head>
<body>
    <h2>All Student list</h2>
    <table>
        <tr>
          <th>id</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Actions</th>
          <th>Options</th>
        </tr>
        <% students.forEach(function(student) { %>
            <tr>
               <td> <%= student.id %></td>
               <td> <%= student.first_name %></td>
               <td> <%= student.last_name %></td>
               <td> <%= student.email %></td>
               <td><a href="/students/<%= student.id %>/add-subject">Add Subject</a></td>
               <td><a href="/students/edit/<%= student.id %>">Edit</a></td>
			   <td><a href="/students/delete/<%= student.id%>" onclick="return confirm('Are you sure?')">Delete</td>
		
             </tr>

        <% }) %>
        
      </table>
      <br>
      <ul>
            <li><a href="/students/add">Add Student</a></li>
        </ul>
</body>
</html>