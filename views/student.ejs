<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
            table {
                font-family: arial, sans-serif;
                border-collapse: collapse;
                width: 100%;
            }
            
            td, th {
                border: 1px solid #dddddd;
                text-align: left;
                padding: 8px;
            }
            
            tr:nth-child(even) {
                background-color: #dddddd;
            }
            </style>
</head>
<body>
    <h1>Student Data</h1>
    <h3><a href="/student/add">add student</a></h3>
    <table>
        <tr>
          <th>id</th>
          <th>first name</th>
          <th>last name</th>
          <th>email</th>
          <th>action</th>
          <th>option</th>
        </tr>
        <% dataStudent.forEach(function(student){ %>
        <tr>
                <td><%= student.id %></td>
                <td><%= student.firstName %></td>
                <td><%= student.lastName %></td>
                <td><%= student.email %></td>
                <td><a href="/student/<%= student.id %>/add-subject">add subject</a></td>
                <td><a href="/student/edit/<%= student.id %>">edit</a> || <a href="/student/delete/<%= student.id %>">delete</a></td>
            <% }) %>
        </tr>
    </table>
    <h3><a href="/">back to home</a></h3>
</body>
</html>