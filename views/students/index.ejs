<%- include('../header/header') -%>
  <main role="main" class="container" style=" padding: 5rem 1.5rem; text-align: center;">
    <div class="content">
      <h2>Students Data</h2>

      <%if ( error !== null) {%>
      <div class="alert alert-danger">error</div>
      <%} %>
      <a class="btn btn-sm btn-info " href="/students/add" role="button" >Add Student</a>

      <table class="table mt-5 table-striped">
        <thead>
        <tr>
          <th scope="col">Id</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Email</th>
          <th scope="col">Actions</th>
          <th scope="col">Option</th>
        </tr>
        </thead>
        <tbody>
        <% dataStudents.forEach(student => { %>
          <tr>
            <th scope="row"><%= student.id %></th>
            <td><%= student.firstName %></td>
            <td><%= student.lastName %></td>
            <td><%= student.email %></td>
            <td><a class="text-info" href="/students/<%= student.id%>/add-subject">Add Subject</a></td>
            <td>
            <a class="text-info" href="/students/edit/<%= student.id%>" >edit</a>
            <span>|</span>
            <a class="text-info" href ="/students/delete/<%= student.id%>" onclick="return confirm('Are you sure to delete this item?')">delete</a>
            </td>
          </tr>
        <% })%>
        </tbody>
      </table>
    </div>
  </main>
<%- include('../script/script')-%>
