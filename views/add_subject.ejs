<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>ADD SUBJECT</title>

</head>
<body>
    <table style="width:100%">
        <tr>
            <th>First Name:</th>
            <td><%= student.first_name %></td>
        </tr>
        <tr>
            <th>Last Name:</th>
            <td><%= student.last_name %></td>
        </tr>
        <tr>
            <th>Email</th>
            <td><%= student.email %></td>
        </tr>
    </table>
    <form action="/students/<%= student.id %>/add-subject" method="POST">
        <br>
        Choose Subject<br>
        <select name="subjectId">
                <% subjects.forEach(function(subject){ %>
                    <option value="<%=subject.id %>"><%= subject.subject_name %></option>
                <% }) %>
        </select>
        <br><br>
        <button type="addSubject" onclick="alert('Succesfully add subject')" value="addSubject">Add Subject</button>

    </form>
              
</body>
</html>